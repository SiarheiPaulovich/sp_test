<?xml version="1.0" encoding="UTF-8"?>
<suite name="Login/Logout/Inbox" verbose="1" >
  <parameter name="username" value="TrueTestMail" />
  <parameter name="password" value="TruePassword" />
  <listeners>
    <listener class-name="com.sp.mailru.runner.SuiteListener" />
  </listeners>
  <test name="Login" >
    <classes>
      <class name="com.sp.mailru.tests.TestLogin"/>
    </classes>
 </test>
 <test name="Logout" >
    <classes>
      <class name="com.sp.mailru.tests.TestLogout"/>
    </classes>
 </test>
 <test name="Welcome mail received" >
    <classes>
      <class name="com.sp.mailru.tests.TestInboxMails"/>
    </classes>
 </test>
</suite>